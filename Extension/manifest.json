{
    "name": "Extension_YizhiZhou",
    "version": "3.0",
    "manifest_version": 2,
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "icons": {
        "16": "image/i1.png",
        "32": "image/i2.png",
        "48": "image/i3.png"
      },

    "browser_action": {
        "default_popup": "popup.html", 

        "default_icon": {
            "16": "image/i1.png",
            "32": "image/i2.png",
            "48": "image/i3.png"
          }
    },

    "background":{
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "tabs",
        "contextMenus",
		"notifications",
		"storage"
    ]
}